{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
		// Makefile
		{
			"label": "Makefile: install Kagero",
			"type": "shell",
			"command": "make",
			"args": [
				"install"
			],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "Makefile: build Kagero (Windows)",
			"type": "shell",
			"command": "make",
			"args": [
				"windows"
			],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "Makefile: build Kagero (Linux)",
			"type": "shell",
			"command": "make",
			"args": [
				"linux"
			],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			}
		},
		{
            "label": "Makefile: test Kagero",
            "command": "make",
            "type": "shell",
            "args": [
                "test"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
		// Golang
		{
            "label": "Go: install executable",
            "command": "go",
            "type": "shell",
            "args": [
                "install",
                "${workspaceFolder}/src/kagero.go"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Go: build executable",
            "command": "go",
            "type": "shell",
            "args": [
                "build",
                "-o",
                "${workspaceFolder}/build/${go.binaryName}",
				"${workspaceFolder}/src/kagero.go"
			],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            }
        },
        {
            "label": "Go: test executable",
            "command": "go",
            "type": "shell",
            "args": [
                "run",
                "${workspaceFolder}/src/kagero.go",
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        }
    ]
}